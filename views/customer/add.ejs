<form action="/add" method="post">
    <div class="row form-group mb4">
        <div class="col">
            <label for="name">Name</label>
            <input type="text" class="form-control" id="name" name="name" value="" placeholder="Name" required>
        </div>
    </div>

    <div class="row form-group mb4">
        <div class="col">
            <label for="phone">Phone</label>
            <input type="tel" class="form-control" id="phone" name="phone" value="" placeholder="Phone" required>
        </div>
    </div>

    <div class="row form-group mb4">
        <div class="col">
            <label for="email">Email</label>
            <input type="email" class="form-control" id="email" name="email" value="" placeholder="Email" required>
        </div>
    </div>

    <div class="row form-group mb4">
        <div class="col">
            <label for="details">Customer Details</label>
            <textarea class="form-control" name="details"></textarea>
        </div>
    </div>

    <div class="row form-group mb4">
        <div class="col">
          <input type="submit" class="btn btn-sm" value="Add Customer">
        </div>
    </div>
</form>